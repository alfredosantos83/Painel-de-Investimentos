				{
					"name": "Cache - Todos os Produtos (1ª chamada)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status 200\", () => pm.response.to.have.status(200));",
									"const time = pm.response.responseTime;",
									"pm.collectionVariables.set(\"firstCallTime\", time);",
									"console.log(`⏱️ Tempo 1ª chamada (SEM cache): ${time}ms`);"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/products/all",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"products",
								"all"
							]
						}
					}
				},
				{
					"name": "Cache - Todos os Produtos (2ª chamada COM cache)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status 200\", () => pm.response.to.have.status(200));",
									"const firstTime = parseInt(pm.collectionVariables.get(\"firstCallTime\"));",
									"const secondTime = pm.response.responseTime;",
									"console.log(`⏱️ Tempo 1ª chamada: ${firstTime}ms`);",
									"console.log(`⏱️ Tempo 2ª chamada (COM cache): ${secondTime}ms`);",
									"pm.test(\"Cache funcionando - 2ª chamada mais rápida\", () => {",
									"    pm.expect(secondTime).to.be.below(firstTime);",
									"});"
								]
							}
						}
