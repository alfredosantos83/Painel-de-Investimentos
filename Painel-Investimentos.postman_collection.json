		{
			"name": "Pagination & Cache",
			"item": [
				{
					"name": "Paginação - Página 0 (5 itens)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status 200\", () => pm.response.to.have.status(200));",
									"pm.test(\"Estrutura paginada correta\", () => {",
									"    const data = pm.response.json();",
									"    pm.expect(data).to.have.property('items');",
									"    pm.expect(data).to.have.property('page');",
									"    pm.expect(data).to.have.property('size');",
									"    pm.expect(data).to.have.property('total');",
									"    pm.expect(data).to.have.property('totalPages');",
									"});",
									"pm.test(\"Página 0 com 5 itens\", () => {",
									"    const data = pm.response.json();",
									"    pm.expect(data.page).to.eql(0);",
									"    pm.expect(data.size).to.eql(5);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/products?page=0&size=5",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"products"
							],
							"query": [
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "5"
								}
							]
						}
					}
				},
